<p style="color: green"><%= notice %></p>

<div class="card">

<div class="card-body">
<%= render @project %>

  <div class = "text-center">
  <%= link_to "Edit this project", edit_project_path(@project) %> |
  <%= link_to "Back to projects", projects_path %> |
   <%= link_to "Destroy this project", @project, method: :delete %>
  </div>

<div class="card mt-5">
  <div class ="container">
    <h1>New task</h1>

    <%= render 'tasks/form' %>



  <h1 class ="text-center">Attached tasks</h1>

<table class="table table-striped text-center table-hover">
  <tr class =>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="3">Actions</th>

  </tr>

<% @project.tasks.each do |task| %>
  <% if task.persisted? %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= link_to 'Show', [task.project, task], class: "btn btn-light" %></td>
    <td><%= link_to 'Edit', edit_project_task_path(task.project, task), class: "btn btn-secondary" %></td>
    <td><%= link_to 'Destroy', [task.project, task], class: "btn btn-dark", method: :delete %></td>
  </tr>
  <% end %>
<% end %>
</table>

  </div>
</div>

<br />

</div>
</div>
