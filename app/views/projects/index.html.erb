<p style="color: green"><%= notice %></p>

        <div class="card">
                
          <div class="card-body">
              
              <h2 class="card-title d-flex justify-content-between">
                  <span> Projects</span>
                  <%= link_to "New project", new_project_path, class: 'btn btn-primary' %>
              </h2>

              <div id="projects">
                  <% @projects.each do |project| %>
                  <div class="card m-2">
                        <div class="card-body">
                             <%= render project %>
                             <%= link_to "Show", project, class: 'btn btn-light' %>

                        </div>
                  </div>
                     
                  <% end %>
              </div>
          </div>
                  
        </div>

 




